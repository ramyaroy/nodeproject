{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  User has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Employees</h1>
  </div>

  <div class="col-6 d-flex justify-content-end">
    <div class="col-3">
      <form class="d-flex " method="POST" action="/user/" novalidate>
        <div class="input-group">
          <input type="search" class="form-control input-sm mb-2 mr-2" placeholder="Search" aria-label="Search"
            aria-describedby="search-addon" />
          <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;">
            <i class="fa fa-times"></i>
          </button>
        </div>
      </form>
    </div>
    <div class="col-3">
      <a href="/user/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a>
    </div>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#if rows.[0]}}

    {{#each rows}}
    <tr>
      <td>{{@key}}</td>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="/user/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
          View</a>
        <a href="/user/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/user/statusupdate/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>
          Archive</a>
        <a href="/user/{{this.id}}" type="button" onclick="return confirm('Are you sure to delete?');"
          class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td align="center" colspan="6">No Data Found</td>
    </tr>
    {{/if}}

  </tbody>
</table>